= form_with model: @tweet, url:tweets_path, local: true do |f|
  .form-group
    = f.label :content
    %br
    = f.text_area :content, rows: 10
  = f.fields_for :image do |ff|
    .form-group
      = ff.label :image
      %br
      = ff.file_field :image
  = f.submit '登録する'

%ul
  %li= @user.name
  %li= @user.screen_name
  -if @user.biography.present?
    %li= @user.biography
  -if @user.birthday.present?
    %li= @user.birthday
%ul
  - @tweets.reverse_each do |tweet|
    - if tweet.type == "TweetRetweet"
      retweet
      - tweet = tweet.retweet.tweet
    %li
      %p= tweet.content
    - if tweet.type == "TweetImage"
      = image_tag tweet.image.image.to_s
    - unless @retweets.exists?(tweet_id: tweet.id)
      = button_to "リツイート", retweet_path(tweet.id), method: :get
    - else
      = button_to "リツイートを削除する",retweet_path(tweet.id), method: :delete