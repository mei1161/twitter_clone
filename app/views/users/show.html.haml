= form_with model: @tweet, local: true do |f|
  .form-group
    = f.label :content
    %br
    = f.text_area :content, rows: 10
  = f.fields_for :image do |ff|
    .form-group
      = ff.label :image
      %br
      = ff.file_field :image
  = f.submit '登録する'

%ul
  %li= @user.name
  %li= @user.screen_name
  -if @user.biography.present?
    %li= @user.biography
  -if @user.birthday.present?
    %li= @user.birthday

- @tweets.each do |tweet|
  %p= tweet.content
  %p
    - if tweet.image.present?
      = image_tag tweet.image.image.to_s